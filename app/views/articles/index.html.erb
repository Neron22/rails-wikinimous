<h1>Liste des articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <strong><%= link_to article.title, article_path(article) %></strong> <br>
      <%= article.content %> <br>
      <%= link_to "Delete",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>


<%= link_to "+ Create a article", new_article_path %>
